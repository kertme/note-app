<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.task.noteapp.features.home.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">

            <argument
                android:name="noteDetailsType"
                app:argType="com.task.noteapp.features.add_note.domain.model.NoteDetailsType"
                />

            <argument
                android:name="note"
                app:nullable="true"
                app:argType="com.task.noteapp.core.db.Note" />


        </action>
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.task.noteapp.features.add_note.ui.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note">

        <argument
            android:name="noteDetailsType"
            app:argType="com.task.noteapp.features.add_note.domain.model.NoteDetailsType"
            />

        <argument
            android:name="note"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.task.noteapp.core.db.Note" />

    </fragment>
</navigation>